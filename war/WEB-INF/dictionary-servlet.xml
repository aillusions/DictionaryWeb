<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean id="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
        <property name="basename" value="messages"/>
    </bean>

    <bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="viewClass" value="org.springframework.web.servlet.view.JstlView"/>
        <property name="prefix" value="/jsp/"/>
        <property name="suffix" value=".jsp"/>
    </bean>    
    
    <bean id="manager" class="com.aillusions.dictionary.core.Manager">
     	<constructor-arg>
	     	<value>e://etc//dict_ital//words.xml</value>
     	</constructor-arg>    
    </bean>
    
    <bean name="/home.do" class="com.aillusions.dictionary.web.DictionaryController">
        <property name="manager" ref="manager"/>
    </bean>
    
    <bean name="/priceincrease.do" class="com.aillusions.dictionary.web.PriceIncreaseFormController">
        <property name="sessionForm" value="true"/>
        <property name="commandName" value="priceIncrease"/>
        <property name="commandClass" value="com.aillusions.dictionary.service.PriceIncrease"/>
        <property name="validator">
            <bean class="com.aillusions.dictionary.service.PriceIncreaseValidator"/>
        </property>
        <property name="formView" value="home"/>
        <property name="successView" value="home.do"/>
    </bean>

</beans>